{
  "name": "svelte-pilot-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:csr": "vite",
    "build:csr": "vite build",
    "start:csr": "sirv dist --single --host --port 5173",
    "dev:ssr": "VITE_SVELTE_HYDRATABLE=1 node ssr-dev-server",
    "build:ssr": "export VITE_SVELTE_HYDRATABLE=1 && vite build --ssrManifest --outDir dist/client && vite build --ssr src/adapters/${ADAPTER}/index.ts --outDir ${OUT_DIR:-dist/server} && rm dist/client/ssr-manifest.json",
    "build:node": "ADAPTER=node npm run build:ssr",
    "build:cloudflare": "ADAPTER=cloudflare OUT_DIR=functions npm run build:ssr && cp src/adapters/cloudflare/_routes.json dist/client/ && mv functions/index.js functions/[[catchall]].js",
    "build:netlify": "ADAPTER=netlify npm run build:ssr",
    "build:netlify-edge": "ADAPTER=netlify-edge npm run build:ssr",
    "start:node": "cd dist/server && node index.js",
    "md2html": "node md2html.js",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231010.0",
    "@netlify/functions": "^2.2.1",
    "@sveltejs/vite-plugin-svelte": "^2.4.6",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.8.4",
    "marked": "^9.1.0",
    "marked-highlight": "^2.0.6",
    "mime": "^3.0.0",
    "postcss-preset-env": "^9.2.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "rollup-plugin-import-meta-url-to-module": "^0.3.0",
    "shiki": "^0.14.5",
    "svelte": "^4.2.1",
    "svelte-check": "^3.5.2",
    "svelte-preprocess-css-hash": "^0.1.7",
    "svelte-preprocess-html-asset": "^0.1.7",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "dependencies": {
    "cookie.js": "^7.0.1",
    "sirv": "^2.0.3",
    "sirv-cli": "^2.0.2",
    "svelte-pilot": "0.6.0-6"
  }
}