{
  "name": "svelte-pilot-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:spa": "vite",
    "dev:ssr": "VITE_SVELTE_HYDRATABLE=1 node ssr-dev-server",
    "build:spa": "vite build",
    "build:ssr": "export VITE_SVELTE_HYDRATABLE=1 && vite build --ssrManifest --outDir ${CSR_OUT:-dist/client} && vite build --ssr src/adapters/${ADAPTER:-node}/index.ts --outDir ${SSR_OUT:-dist/server} && rm ${CSR_OUT:-dist/client}/ssr-manifest.json",
    "build:cloudflare": "ADAPTER=cloudflare CSR_OUT=dist SSR_OUT=functions npm run build:ssr && cp src/adapters/cloudflare/_routes.json dist && mv functions/index.js functions/[[catchall]].js",
    "build:netlify": "ADAPTER=netlify npm run build:ssr",
    "build:netlify-edge": "ADAPTER=netlify-edge npm run build:ssr",
    "build:ssg": "ADAPTER=ssg CSR_OUT=dist SSR_OUT=.ssg npm run build:ssr && node .ssg/index.js && rm -rf .ssg",
    "start:ssr": "node dist/server/index.js",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "md2html": "node md2html.js"
  },
  "ssg": [
    "/",
    "/en/introduction",
    "/en/creating-a-project",
    "/en/routing",
    "/en/ssr",
    "/en/router",
    "/en/link",
    "/zh/introduction",
    "/zh/creating-a-project",
    "/zh/routing",
    "/zh/ssr",
    "/zh/router",
    "/zh/link"
  ],
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231010.0",
    "@sveltejs/vite-plugin-svelte": "^2.4.6",
    "@tailwindcss/typography": "^0.5.10",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.8.4",
    "marked": "^9.1.0",
    "marked-highlight": "^2.0.6",
    "mime": "^3.0.0",
    "postcss-preset-env": "^9.2.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "shiki": "^0.14.5",
    "svelte-check": "^3.5.2",
    "svelte-preprocess-css-hash": "^0.1.7",
    "svelte-preprocess-import-assets": "^1.0.1",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  },
  "dependencies": {
    "@netlify/functions": "^2.2.1",
    "accepts": "^1.3.8",
    "cookie.js": "^7.0.1",
    "sirv": "^2.0.3",
    "svelte": "^4.2.1",
    "svelte-pilot": "0.6.0-6"
  }
}