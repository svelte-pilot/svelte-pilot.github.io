{
  "name": "svelte-pilot-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:spa": "vite",
    "dev:ssr": "VITE_SVELTE_HYDRATABLE=1 node ssr-dev-server",
    "build:spa": "vite build",
    "build:ssr": "export VITE_SVELTE_HYDRATABLE=1 && vite build --ssrManifest --outDir ${CSR_OUT:-dist/client} && vite build --ssr src/adapters/${ADAPTER:-node}/index.ts --outDir ${SSR_OUT:-dist/server} && rm -r ${CSR_OUT:-dist/client}/.vite",
    "build:cloudflare": "ADAPTER=cloudflare CSR_OUT=dist SSR_OUT=functions npm run build:ssr && cp src/adapters/cloudflare/_routes.json dist && mv functions/index.js functions/[[catchall]].js",
    "build:netlify": "ADAPTER=netlify npm run build:ssr",
    "build:netlify-edge": "ADAPTER=netlify-edge npm run build:ssr",
    "build:ssg": "ADAPTER=ssg CSR_OUT=dist SSR_OUT=.ssg npm run build:ssr && node .ssg/index.js && rm -r .ssg && if [ ${NOJS:-0} -eq 1 ]; then rm dist/**/*.js; fi",
    "start:ssr": "node dist/server/index.js",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "md2html": "node md2html.js"
  },
  "ssg": [
    "/",
    "/en/introduction",
    "/en/creating-a-project",
    "/en/routing",
    "/en/ssr",
    "/en/template",
    "/en/link",
    "/en/client-app",
    "/en/server-app",
    "/en/router",
    "/zh-CN/introduction",
    "/zh-CN/creating-a-project",
    "/zh-CN/routing",
    "/zh-CN/ssr",
    "/zh-CN/template",
    "/zh-CN/link",
    "/zh-CN/client-app",
    "/zh-CN/server-app",
    "/zh-CN/router"
  ],
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tailwindcss/typography": "^0.5.10",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.9.3",
    "html-entities": "^2.4.0",
    "marked": "^10.0.0",
    "marked-gfm-heading-id": "^3.1.1",
    "mime": "^3.0.0",
    "postcss-preset-env": "^9.3.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "shiki": "^0.14.5",
    "svelte-check": "^3.6.0",
    "svelte-preprocess-css-hash": "^0.1.7",
    "svelte-preprocess-import-assets": "^1.1.0",
    "tailwindcss": "^3.3.5",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.2"
  },
  "dependencies": {
    "@netlify/functions": "^2.4.0",
    "accepts": "^1.3.8",
    "cookie.js": "^7.0.1",
    "sirv": "^2.0.3",
    "svelte": "^4.2.7",
    "svelte-pilot": "0.6.1"
  }
}